<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.AssetDetailsFragment">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previewLoadSpinner"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="visible" android:indeterminate="true"/>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:id="@+id/previewOutput" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="@string/loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/previewOutput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="@string/loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bylineTextView"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="@string/loading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bylineTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>